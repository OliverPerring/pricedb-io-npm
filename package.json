{
  "name": "@pricedb-io/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript SDK for pricedb.io and spells.pricedb.io APIs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint packages/*/src --ext .ts",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "publish:all": "npm run build && npm publish --workspaces --access public"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/pricedb-io-npm.git"
  },
  "keywords": [
    "tf2",
    "team-fortress-2",
    "pricedb",
    "trading",
    "api-client",
    "typescript",
    "spells"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/pricedb-io-npm/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/pricedb-io-npm#readme"
}
